# Equity Research Report Generator - Configuration
# Copy this file to .env and adjust settings as needed

# Default ticker symbol to analyze
DEFAULT_TICKER=NVDA

# Data collection settings
YEARS_OF_HISTORY=5
YEARS_OF_FINANCIALS=4

# Caching settings
CACHE_ENABLED=true
CACHE_DIR=.cache
CACHE_TTL_HOURS=24
CACHE_PRICE_TTL_HOURS=1

# Output settings
OUTPUT_DIR=output
CHARTS_DIR=output/charts
OUTPUT_FORMAT=markdown
CHART_FORMAT=html

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=output/analysis.log
LOG_TO_CONSOLE=true

# Analysis parameters
CHART_PRICE_YEARS=2
MA_SHORT=50
MA_LONG=200

# API settings (if needed in future)
# ALPHA_VANTAGE_API_KEY=your_key_here
# FMP_API_KEY=your_key_here

# Performance settings
PARALLEL_PEER_FETCH=true
MAX_WORKERS=5

# Report settings
INCLUDE_CHARTS=true
GENERATE_PDF=false
